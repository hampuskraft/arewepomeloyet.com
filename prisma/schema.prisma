generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pomelo {
  hash           String   @id
  date           DateTime
  nitro          Boolean
  earlySupporter Boolean  @default(false) @map("early_supporter")
  oauth2         Boolean  @default(false)
  timestamp      DateTime @default(now())

  @@index([date])
  @@index([oauth2])
  @@map("pomelos")
}
